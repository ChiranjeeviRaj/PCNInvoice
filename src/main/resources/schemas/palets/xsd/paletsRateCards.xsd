<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <xs:element name="ukPaletsPrices">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="zones"/>
        <xs:element ref="platesServices"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="zones">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" ref="zone"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="zone">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="postCodes"/>
        <xs:element ref="nextDay"/>
        <xs:element ref="economy"/>
      </xs:sequence>
      <xs:attribute name="name" use="required"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="postCodes" type="xs:string"/>
  <xs:element name="nextDay">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" ref="plts"/>
      </xs:sequence>
      <xs:attribute name="days" type="xs:integer"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="economy">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" ref="plts"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="platesServices">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" ref="paletsService"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="paletsService">
    <xs:complexType>
      <xs:sequence>
        <xs:element ref="code"/>
        <xs:element ref="type"/>
        <xs:element ref="charges"/>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
  <xs:element name="code" type="xs:NMTOKEN"/>
  <xs:element name="type" type="xs:string"/>
  <xs:element name="charges" type="xs:decimal"/>
  <xs:element name="plts">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" ref="kgs"/>
      </xs:sequence>
      <xs:attribute name="max" use="required" type="xs:integer"/>
      <xs:attribute name="min" use="required" type="xs:integer"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="kgs">
    <xs:complexType>
      <xs:simpleContent>
        <xs:extension base="xs:decimal">
          <xs:attribute name="max" use="required" type="xs:integer"/>
          <xs:attribute name="min" use="required" type="xs:integer"/>
        </xs:extension>
      </xs:simpleContent>
    </xs:complexType>
  </xs:element>
</xs:schema>
